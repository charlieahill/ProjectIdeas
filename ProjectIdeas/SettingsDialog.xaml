<Window x:Class="ProjectIdeas.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="180" Width="340" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="16">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#222" Opacity="0.18"/>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Appearance" Margin="0,0,0,8" Foreground="{DynamicResource TextBrush}" FontSize="13"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Theme" Margin="0,0,0,4" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
            <ComboBox x:Name="ThemeComboBox" Width="140" Height="26" SelectedIndex="0" Style="{DynamicResource PremiumComboBoxStyle}" Foreground="{DynamicResource TextBrush}" FontSize="12">
                <ComboBoxItem Content="System" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                <ComboBoxItem Content="Light" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                <ComboBoxItem Content="Dark" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Height="26" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click" Style="{DynamicResource PremiumButtonStyle}" FontSize="12"/>
            <Button Content="Cancel" Width="70" Height="26" IsCancel="True" Style="{DynamicResource PremiumButtonStyle}" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
