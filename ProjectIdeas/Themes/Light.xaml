<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Light theme brushes -->
  <Color x:Key="PrimaryColor">#FFFFFF</Color>
  <Color x:Key="SurfaceColor">#F6F8FA</Color>
  <Color x:Key="AccentBlue">#2563EB</Color>
  <Color x:Key="AccentYellow">#F59E0B</Color>
  <Color x:Key="AccentGray">#E6E9EE</Color>
  <Color x:Key="AccentGreen">#16A34A</Color>
  <Color x:Key="AccentRed">#DC2626</Color>
  <Color x:Key="BorderColor">#E5E7EB</Color>
  <Color x:Key="MutedTextColor">#6B7280</Color>
  <Color x:Key="TextColor">#111827</Color>

  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryBarBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource BorderColor}"/>
  <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
  <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
  <SolidColorBrush x:Key="AccentGrayBrush" Color="{StaticResource AccentGray}"/>
  <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
  <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
  <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="HoverSurfaceBrush" Color="#EFF2FF"/>
  <SolidColorBrush x:Key="ActiveSurfaceBrush" Color="#E0EAFF"/>
</ResourceDictionary>