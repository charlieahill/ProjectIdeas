<Window x:Class="ProjectIdeas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectIdeas"
        mc:Ignorable="d"
        Title="Project Ideas Manager" Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Color Palette -->
        <Color x:Key="PrimaryDark">#23272F</Color>
        <Color x:Key="SecondaryDark">#2C313A</Color>
        <Color x:Key="AccentBlue">#2196F3</Color>
        <Color x:Key="AccentYellow">#FFD600</Color>
        <Color x:Key="AccentGray">#44474F</Color>
        <Color x:Key="AccentGreen">#4CAF50</Color>
        <Color x:Key="AccentRed">#F44336</Color>
        <Color x:Key="SoftWhite">#F5F5F5</Color>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
        <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}"/>
        <SolidColorBrush x:Key="SoftWhiteBrush" Color="{StaticResource SoftWhite}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
        <SolidColorBrush x:Key="AccentGrayBrush" Color="{StaticResource AccentGray}"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
        <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>

        <!-- Premium Button Style -->
        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#222" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="4" Color="#2196F3" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentYellowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Vote Button Style (with shadow and rounded) -->
        <Style x:Key="VoteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333944"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#23272F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style for Details Panel -->
        <Style x:Key="PremiumComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
            <Setter Property="Background" Value="{StaticResource AccentGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#222" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{StaticResource AccentGrayBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="6,2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentYellowBrush}"/>
                                <Setter Property="Foreground" Value="#23272F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="ContentSite"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Margin="6,0,0,0"
                                                      RecognizesAccessKey="True"/>
                                    <ToggleButton Grid.Column="1"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  MinWidth="24">
                                        <Path Data="M 0 0 L 8 0 L 4 5 Z" Fill="{StaticResource SoftWhiteBrush}" Width="12" Height="6" Margin="6,0,6,0" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="{StaticResource AccentGrayBrush}"
                                        BorderBrush="{StaticResource AccentBlueBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentYellowBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style (was incorrectly using a Button style) -->
        <Style x:Key="PremiumTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
            <Setter Property="Background" Value="{StaticResource AccentGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Reorder Button Style -->
        <Style x:Key="ReorderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#555"/>
            <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Reorder Button Style for Bugs/Features -->
        <Style x:Key="SmallReorderButtonStyle" TargetType="Button" BasedOn="{StaticResource ReorderButtonStyle}">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- ProjectItemTemplate -->
        <DataTemplate x:Key="ProjectItemTemplate">
            <Grid Margin="0,5" HorizontalAlignment="Stretch" Background="{StaticResource AccentGrayBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" x:Name="StatusRect" Fill="{Binding ColorCode}"/>
                <Border Grid.Column="1" Background="{StaticResource AccentGrayBrush}" CornerRadius="10" Margin="5,0,0,0" Padding="14,10,14,10" Effect="{x:Null}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Status label in top right -->
                        <TextBlock Grid.Row="0" Text="{Binding Status}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource SoftWhiteBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,2"/>
                        <!-- Title -->
                        <TextBlock Grid.Row="1" Text="{Binding Title}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource SoftWhiteBrush}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <!-- Description -->
                        <TextBlock Grid.Row="2" Text="{Binding Description}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxHeight="40" Foreground="#B0B3B8"/>
                        <!-- Votes and Send to Top in lower right -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,4,0,0" Grid.Row="2">
                            <Button Style="{StaticResource VoteButtonStyle}" Click="UpVote_Click" ToolTip="Upvote">
                                <Path Data="M 0 8 L 8 0 L 16 8 Z" Fill="#2196F3" Width="16" Height="8"/>
                            </Button>
                            <TextBlock Text="{Binding Votes}" VerticalAlignment="Center" Margin="5,0" Foreground="{StaticResource SoftWhiteBrush}"/>
                            <Button Style="{StaticResource VoteButtonStyle}" Click="DownVote_Click" ToolTip="Downvote">
                                <Path Data="M 0 0 L 8 8 L 16 0 Z" Fill="#F44336" Width="16" Height="8"/>
                            </Button>
                            <Button Style="{StaticResource VoteButtonStyle}" Click="SendToTop_Click" ToolTip="Send to top" Margin="8,0,0,0">
                                <Grid Width="16" Height="16">
                                    <Path Data="M 8 2 L 16 10 L 0 10 Z" Fill="#FFD600" Stroke="#FFD600" StrokeThickness="1"/>
                                    <Line X1="2" Y1="13" X2="14" Y2="13" Stroke="#FFD600" StrokeThickness="2"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="8,0,8,0" >
                    <Button Style="{StaticResource ReorderButtonStyle}" Click="MoveProjectIdeaUp_Click" ToolTip="Move Up">
                        <Path Data="M 0 8 L 8 0 L 16 8 Z" Fill="#DDD" Width="18" Height="9"/>
                    </Button>
                    <Button Style="{StaticResource ReorderButtonStyle}" Click="MoveProjectIdeaDown_Click" ToolTip="Move Down">
                        <Path Data="M 0 0 L 8 8 L 16 0 Z" Fill="#DDD" Width="18" Height="9"/>
                    </Button>
                </StackPanel>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Open">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{StaticResource AccentBlueBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="In Progress">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{StaticResource AccentYellowBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="On Hold">
                    <Setter TargetName="StatusRect" Property="Fill" Value="#888888"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Done">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{StaticResource AccentGreenBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{StaticResource AccentRedBrush}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- BoolToTextDecorationConverter -->
        <local:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter"/>
        <local:VoteDirectionToIconConverter x:Key="VoteDirectionToIconConverter"/>

        <!-- Editable WorkItem Template with Done Check Mark -->
        <DataTemplate x:Key="WorkItemTemplate">
            <DockPanel>
                <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" 
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"
                          Click="WorkItemDone_Click"/>
                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         BorderThickness="0" 
                         Background="Transparent"
                         FontSize="14"
                         Foreground="{StaticResource SoftWhiteBrush}"
                         VerticalAlignment="Center"
                         TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"/>
                <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button Style="{StaticResource SmallReorderButtonStyle}" Click="MoveWorkItemUp_Click" ToolTip="Move Up">
                        <Path Data="M 0 8 L 8 0 L 16 8 Z" Fill="#DDD" Width="14" Height="7"/>
                    </Button>
                    <Button Style="{StaticResource SmallReorderButtonStyle}" Click="MoveWorkItemDown_Click" ToolTip="Move Down">
                        <Path Data="M 0 0 L 8 8 L 16 0 Z" Fill="#DDD" Width="14" Height="7"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DataTemplate>

        <!-- Themed CheckBox Style -->
        <Style x:Key="ThemedCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource AccentGrayBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="Border"
                                    Width="20" Height="20"
                                    CornerRadius="5"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource AccentBlueBrush}"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark" Data="M 4 10 L 9 15 L 16 6" Stroke="{StaticResource AccentBlueBrush}" StrokeThickness="2" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentYellowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Vote History Item Template -->
        <DataTemplate x:Key="VoteHistoryItemTemplate">
            <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="6" Margin="2,2,2,2" Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Date, StringFormat=yyyy-MM-dd HH:mm}" FontWeight="Bold" Foreground="{StaticResource SoftWhiteBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Direction}" Foreground="{StaticResource SoftWhiteBrush}" Margin="16,0,0,0"/>
                    <TextBlock x:Name="ArrowIcon" Grid.Column="2" Text="{Binding Direction, Converter={StaticResource VoteDirectionToIconConverter}}" FontSize="16" Margin="16,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource SoftWhiteBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Direction}" Value="Up">
                                        <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Direction}" Value="Down">
                                        <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#23272F" CornerRadius="12" BorderBrush="#333" BorderThickness="1" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#23272F" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Project Ideas Manager" VerticalAlignment="Center" Margin="16,0,0,0" Foreground="#F5F5F5" FontWeight="SemiBold" FontSize="16"/>
                <Button Grid.Column="1" Content="━" Width="36" Height="24" Margin="0,8" Click="Minimize_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Minimize"/>
                <Button Grid.Column="2" Content="☐" Width="36" Height="24" Margin="0,8" Click="MaximizeRestore_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Maximize/Restore"/>
                <Button Grid.Column="3" Content="✕" Width="36" Height="24" Margin="8,8,8,8" Click="Close_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Close"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel -->
                <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="14">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                            <Button Content="Add New Idea" Height="36" Style="{StaticResource PremiumButtonStyle}" Click="AddNewIdea_Click"/>
                            <CheckBox x:Name="ActiveOnlyCheckBox" Content="Show Active Only" Style="{StaticResource ThemedCheckBoxStyle}" Checked="ActiveOnlyCheckBox_Checked" Unchecked="ActiveOnlyCheckBox_Checked"/>
                            <Border Margin="0,8,0,0" Height="32" Background="{StaticResource AccentGrayBrush}" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="32"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Search Icon -->
                                    <Viewbox Grid.Column="0" Margin="6,0,0,0" VerticalAlignment="Center" Width="16" Height="16">
                                        <Canvas Width="16" Height="16">
                                            <Ellipse Stroke="{StaticResource SoftWhiteBrush}" StrokeThickness="2" Width="10" Height="10" Canvas.Left="1" Canvas.Top="1"/>
                                            <Line X1="10" Y1="10" X2="15" Y2="15" Stroke="{StaticResource SoftWhiteBrush}" StrokeThickness="2"/>
                                        </Canvas>
                                    </Viewbox>
                                    <!-- Search TextBox -->
                                    <TextBox x:Name="SearchBox" Grid.Column="1" BorderThickness="0" Background="Transparent" Foreground="{StaticResource SoftWhiteBrush}" VerticalContentAlignment="Center" FontSize="14" Style="{StaticResource PremiumTextBoxStyle}" TextChanged="SearchBox_TextChanged"/>
                                    <!-- Clear Button -->
                                    <Button x:Name="ClearSearchButton" Grid.Column="2" Width="24" Height="24" Margin="4,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ClearSearchButton_Click" Visibility="Collapsed" Style="{StaticResource VoteButtonStyle}">
                                        <Viewbox Width="12" Height="12">
                                            <Canvas Width="12" Height="12">
                                                <Line X1="2" Y1="2" X2="10" Y2="10" Stroke="{StaticResource SoftWhiteBrush}" StrokeThickness="2"/>
                                                <Line X1="10" Y1="2" X2="2" Y2="10" Stroke="{StaticResource SoftWhiteBrush}" StrokeThickness="2"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <ListView x:Name="IdeasListView"
                                  ItemTemplate="{StaticResource ProjectItemTemplate}"
                                  SelectionChanged="IdeasListView_SelectionChanged"
                                  HorizontalContentAlignment="Stretch"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  BorderThickness="0"
                                  Background="{StaticResource SecondaryDarkBrush}"/>
                    </DockPanel>
                </Border>

                <!-- Right Panel -->
                <Border Grid.Column="1" Margin="10,0,0,0" Background="{StaticResource SecondaryDarkBrush}" CornerRadius="14">
                    <Grid x:Name="RightPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Project Details -->
                        <TextBox x:Name="TitleTextBox" 
                                 FontSize="24" 
                                 Margin="0,0,0,10"
                                 Foreground="{StaticResource SoftWhiteBrush}"
                                 Background="{StaticResource AccentGrayBrush}"
                                 BorderBrush="{StaticResource AccentBlueBrush}"
                                 Style="{StaticResource PremiumTextBoxStyle}"
                                 Text="{Binding ElementName=IdeasListView, Path=SelectedItem.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Status ComboBox -->
                        <Grid Grid.Row="1" Margin="0,0,0,10" Height="32">
                            <ComboBox x:Name="StatusComboBox"
                                      Style="{StaticResource PremiumComboBoxStyle}"
                                      SelectedValue="{Binding ElementName=IdeasListView, Path=SelectedItem.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Content"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="open"/>
                                <ComboBoxItem Content="in progress"/>
                                <ComboBoxItem Content="on hold"/>
                                <ComboBoxItem Content="done"/>
                                <ComboBoxItem Content="cancelled"/>
                                <ComboBoxItem Content="Open"/>
                                <ComboBoxItem Content="In Progress"/>
                                <ComboBoxItem Content="On Hold"/>
                                <ComboBoxItem Content="Done"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                            <Button Background="Transparent" BorderThickness="0" Focusable="False"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Click="StatusComboBoxOverlay_Click"
                                    />
                        </Grid>

                        <TextBox x:Name="DescriptionTextBox" 
                                 Grid.Row="2"
                                 Height="100" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 Margin="0,0,0,10"
                                 Foreground="{StaticResource SoftWhiteBrush}"
                                 Background="{StaticResource AccentGrayBrush}"
                                 BorderBrush="{StaticResource AccentBlueBrush}"
                                 Style="{StaticResource PremiumTextBoxStyle}"
                                 Text="{Binding ElementName=IdeasListView, Path=SelectedItem.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 GotFocus="DescriptionTextBox_GotFocus"/>

                        <!-- Files Section -->
                        <GroupBox Grid.Row="3" Header="Files" Foreground="{StaticResource SoftWhiteBrush}">
                            <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="10">
                                <DockPanel>
                                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Add File Link" Height="30" Margin="0,0,5,0" Click="AddFileLink_Click"
                                                Style="{StaticResource PremiumButtonStyle}"/>
                                        <!-- -->
                                        <Button Grid.Column="1" Content="Add Folder Link" Height="30" Margin="5,0,0,0" Click="AddFolderLink_Click"
                                                Style="{StaticResource PremiumButtonStyle}"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <ListView x:Name="FilesListView" Grid.Column="0" MouseDoubleClick="FilesListView_MouseDoubleClick" Background="{StaticResource AccentGrayBrush}" BorderThickness="0"
                                                 SelectionChanged="FilesListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel>
                                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{StaticResource SoftWhiteBrush}"/>
                                                        <Button Content="🗑" DockPanel.Dock="Right" ToolTip="Remove" Click="RemoveFileOrFolder_Click" Style="{StaticResource VoteButtonStyle}"/>
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <Border Grid.Column="1" Margin="10,0,0,0" Background="{StaticResource AccentGrayBrush}" CornerRadius="8">
                                            <Image x:Name="FileImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                                        </Border>
                                    </Grid>
                                </DockPanel>
                            </Border>
                        </GroupBox>

                        <!-- Work Items Section -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Bugs Section -->
                            <GroupBox Header="Bugs" Foreground="{StaticResource SoftWhiteBrush}">
                                <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="10">
                                    <DockPanel>
                                        <Button DockPanel.Dock="Top" 
                                                Content="Add Bug" 
                                                Height="30" 
                                                Margin="0,0,0,10"
                                                Style="{StaticResource PremiumButtonStyle}"
                                                Click="AddBug_Click"/>
                                        <ListView x:Name="BugsListView"
                                                  ItemTemplate="{StaticResource WorkItemTemplate}"
                                                  Background="{StaticResource AccentGrayBrush}" BorderThickness="0"/>
                                    </DockPanel>
                                </Border>
                            </GroupBox>

                            <!-- Features Section -->
                            <GroupBox Grid.Column="1" 
                                     Header="Features" 
                                     Margin="5,0,0,0"
                                     Foreground="{StaticResource SoftWhiteBrush}">
                                <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="10">
                                    <DockPanel>
                                        <Button DockPanel.Dock="Top" 
                                                Content="Add Feature" 
                                                Height="30" 
                                                Margin="0,0,0,10"
                                                Style="{StaticResource PremiumButtonStyle}"
                                                Click="AddFeature_Click"/>
                                        <ListView x:Name="FeaturesListView"
                                                  ItemTemplate="{StaticResource WorkItemTemplate}"
                                                  Background="{StaticResource AccentGrayBrush}" BorderThickness="0"/>
                                    </DockPanel>
                                </Border>
                            </GroupBox>

                            <!-- Vote History Section -->
                            <GroupBox Grid.Column="2"
                                     Header="Vote History"
                                     Margin="5,0,0,0"
                                     Foreground="{StaticResource SoftWhiteBrush}">
                                <Border Background="{StaticResource AccentGrayBrush}" CornerRadius="10">
                                    <ListView x:Name="VoteHistoryListView"
                                              Background="{StaticResource AccentGrayBrush}"
                                              BorderThickness="0"
                                              ItemTemplate="{StaticResource VoteHistoryItemTemplate}"
                                              HorizontalContentAlignment="Stretch">
                                    </ListView>
                                </Border>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>