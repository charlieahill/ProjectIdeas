<Window x:Class="ProjectIdeas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectIdeas"
        mc:Ignorable="d"
        Title="Project Ideas Manager" Height="900" Width="1400"
        MinHeight="820" MinWidth="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- KEEP styles and templates but use DynamicResource for brushes so themes can be swapped at runtime -->

        <!-- Premium Button Style -->
        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentGrayBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="3" Color="#222" Opacity="0.22"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBlueBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="4" Color="#2196F3" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentYellowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Vote Button Style (with shadow and rounded) -->
        <Style x:Key="VoteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#222" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverSurfaceBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ActiveSurfaceBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style for Details Panel -->
        <Style x:Key="PremiumComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource AccentGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{DynamicResource AccentGrayBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="6,2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBlueBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentYellowBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource WindowBackgroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="ContentSite"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Margin="6,0,0,0"
                                                      RecognizesAccessKey="True"/>
                                    <ToggleButton Grid.Column="1"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  MinWidth="24">
                                        <Path Data="M 0 0 L 8 0 L 4 5 Z" Fill="{DynamicResource TextBrush}" Width="12" Height="6" Margin="6,0,6,0" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="{DynamicResource AccentGrayBrush}"
                                        BorderBrush="{DynamicResource AccentBlueBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentYellowBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style x:Key="PremiumTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource AccentGrayBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Reorder Button Style -->
        <Style x:Key="ReorderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverSurfaceBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ActiveSurfaceBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(local:MainWindow.IsShiftPressed)}" Value="True">
                                <Setter Property="Background" Value="#F7F7FA"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Reorder Button Style for Bugs/Features -->
        <Style x:Key="SmallReorderButtonStyle" TargetType="Button" BasedOn="{StaticResource ReorderButtonStyle}">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- ProjectItemTemplate -->
        <DataTemplate x:Key="ProjectItemTemplate">
            <Grid Margin="0,5" HorizontalAlignment="Stretch" Background="{DynamicResource AccentGrayBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" x:Name="StatusRect" Fill="{Binding ColorCode}"/>
                <Border Grid.Column="1" Background="{DynamicResource AccentGrayBrush}" CornerRadius="10" Margin="5,0,0,0" Padding="10,6,10,6" Effect="{x:Null}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Status label in top right -->
                        <TextBlock Grid.Row="0" Text="{Binding Status}" FontSize="10" FontWeight="Normal" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,2"/>
                        <!-- Title -->
                        <TextBlock Grid.Row="1" Text="{Binding Title}" FontWeight="SemiBold" FontSize="13" Foreground="{DynamicResource TextBrush}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                        <!-- Description -->
                        <TextBlock Grid.Row="2" Text="{Binding Description}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxHeight="32" Foreground="{DynamicResource MutedTextBrush}" FontSize="11"/>
                        <!-- Votes and Send to Top in lower right -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,2,0,0" Grid.Row="2">
                            <Button Style="{StaticResource VoteButtonStyle}" Click="UpVote_Click" ToolTip="Upvote">
                                <Path Data="M 0 8 L 8 0 L 16 8 Z" Fill="{DynamicResource AccentBlueBrush}" Width="14" Height="7"/>
                            </Button>
                            <TextBlock Text="{Binding Votes}" VerticalAlignment="Center" Margin="4,0" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                            <Button Style="{StaticResource VoteButtonStyle}" Click="DownVote_Click" ToolTip="Downvote">
                                <Path Data="M 0 0 L 8 8 L 16 0 Z" Fill="{DynamicResource AccentRedBrush}" Width="14" Height="7"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="8,0,8,0" >
                    <Button Style="{StaticResource ReorderButtonStyle}" Click="MoveProjectIdeaUp_Click" ToolTip="Move Up" Tag="MoveUp">
                        <Grid Width="18" Height="16">
                            <Path Data="M 0 8 L 8 0 L 16 8 Z" Fill="{DynamicResource TextBrush}" Width="18" Height="9" VerticalAlignment="Top"/>
                            <Rectangle x:Name="UpShiftLine" Height="2" Width="14" Fill="{DynamicResource AccentYellowBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Collapsed" Margin="2,0,2,1"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource ReorderButtonStyle}" Click="MoveProjectIdeaDown_Click" ToolTip="Move Down" Tag="MoveDown">
                        <Grid Width="18" Height="16">
                            <Path Data="M 0 0 L 8 8 L 16 0 Z" Fill="{DynamicResource TextBrush}" Width="18" Height="9" VerticalAlignment="Bottom"/>
                            <Rectangle x:Name="DownShiftLine" Height="2" Width="14" Fill="{DynamicResource AccentYellowBrush}" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Collapsed" Margin="2,1,2,0"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Open">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{DynamicResource AccentBlueBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="In Progress">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{DynamicResource AccentYellowBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="On Hold">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{DynamicResource MutedTextBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Done">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{DynamicResource AccentGreenBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter TargetName="StatusRect" Property="Fill" Value="{DynamicResource AccentRedBrush}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- BoolToTextDecorationConverter -->
        <local:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter"/>
        <local:VoteDirectionToIconConverter x:Key="VoteDirectionToIconConverter"/>

        <!-- Editable WorkItem Template with Done Check Mark -->
        <DataTemplate x:Key="WorkItemTemplate">
            <DockPanel>
                <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0" Click="WorkItemDone_Click"/>
                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Background="Transparent" FontSize="11" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}"/>
                <StackPanel Orientation="Horizontal" Margin="6,0,0,0" VerticalAlignment="Center">
                    <Button Style="{StaticResource SmallReorderButtonStyle}" Click="MoveWorkItemUp_Click" ToolTip="Move Up">
                        <Path Data="M 0 8 L 6 0 L 12 8 Z" Fill="{DynamicResource TextBrush}" Width="12" Height="8"/>
                    </Button>
                    <Button Style="{StaticResource SmallReorderButtonStyle}" Click="MoveWorkItemDown_Click" ToolTip="Move Down">
                        <Path Data="M 0 0 L 6 8 L 12 0 Z" Fill="{DynamicResource TextBrush}" Width="12" Height="8"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </DataTemplate>

        <!-- Themed CheckBox Style -->
        <Style x:Key="ThemedCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="{DynamicResource AccentGrayBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="Border"
                                    Width="20" Height="20"
                                    CornerRadius="5"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{DynamicResource AccentBlueBrush}"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark" Data="M 4 10 L 9 15 L 16 6" Stroke="{DynamicResource AccentBlueBrush}" StrokeThickness="2" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBlueBrush}"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentYellowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Vote History Item Template -->
        <DataTemplate x:Key="VoteHistoryItemTemplate">
            <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="6" Margin="2,2,2,2" Padding="6,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Date, StringFormat=yyyy-MM-dd HH:mm}" FontWeight="Normal" Foreground="{DynamicResource TextBrush}" FontSize="11"/>
                    <TextBlock Grid.Column="1" Text="{Binding Direction}" Foreground="{DynamicResource TextBrush}" Margin="12,0,0,0" FontSize="11"/>
                    <TextBlock x:Name="ArrowIcon" Grid.Column="2" Text="{Binding Direction, Converter={StaticResource VoteDirectionToIconConverter}}" FontSize="13" Margin="12,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Direction}" Value="Up">
                                        <Setter Property="Foreground" Value="{DynamicResource AccentBlueBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Direction}" Value="Down">
                                        <Setter Property="Foreground" Value="{DynamicResource AccentRedBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Version Item Template -->
        <DataTemplate x:Key="VersionItemTemplate">
            <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="6" Margin="3,1" Padding="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding VersionNumber}" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" FontWeight="Normal" FontSize="11"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" FontSize="11"/>
                    <TextBlock Grid.Column="2" Text="{Binding FolderLink}" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" TextTrimming="CharacterEllipsis" FontSize="11"/>
                    <TextBlock Grid.Column="3" Text="{Binding ReleaseDate, StringFormat=yyyy-MM-dd HH:mm}" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" FontSize="11"/>
                    <Button Grid.Column="4" Content="🗑" Style="{StaticResource VoteButtonStyle}" Click="RemoveVersion_Click" CommandParameter="{Binding}" ToolTip="Remove version" Margin="6,0,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <local:StringNullOrEmptyToVisibilityConverter x:Key="EmptyToVis"/>

    </Window.Resources>

    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1" SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#222" Opacity="0.18"/>
        </Border.Effect>
        <Grid Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
            </Grid.ColumnDefinitions>

            <!-- Custom Title Bar (flush to top and sides) -->
            <Grid Grid.Row="0" Grid.Column="1" Background="{DynamicResource PrimaryBarBrush}" PreviewMouseLeftButtonDown="TitleBar_PreviewMouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Project Ideas Manager" VerticalAlignment="Center" Margin="16,0,0,0" Foreground="{DynamicResource TextBrush}" FontWeight="SemiBold" FontSize="13"/>
                <!-- Data folder button (file/folder icon) -->
                <Button x:Name="DataFolderButton" Grid.Column="1" Width="36" Height="24" Margin="0,8,0,8" Click="DataFolderButton_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Open Data Folder">
                    <Viewbox Width="18" Height="18">
                        <Canvas Width="18" Height="18">
                            <Path Data="M2,6 L2,16 L16,16 L16,6 Z M2,6 L6,2 L12,2 L16,6" Stroke="{DynamicResource TextBrush}" StrokeThickness="1.5" Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                <!-- Settings button (gear icon) -->
                <Button x:Name="SettingsButton" Grid.Column="2" Width="36" Height="24" Margin="0,8" Click="SettingsButton_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Settings">
                    <Viewbox Width="18" Height="18">
                        <Canvas Width="18" Height="18">
                            <Path Data="M9,1 L9,3 M9,15 L9,17 M3.22,3.22 L4.64,4.64 M13.36,13.36 L14.78,14.78 M1,9 L3,9 M15,9 L17,9 M3.22,14.78 L4.64,13.36 M13.36,4.64 L14.78,3.22 M9,6 A3,3 0 1,0 9,12 A3,3 0 1,0 9,6" Stroke="{DynamicResource TextBrush}" StrokeThickness="1.5" Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>
                </Button>
                <Button Grid.Column="3" Content="━" Width="36" Height="24" Margin="0,8" Click="Minimize_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Minimize" Foreground="{DynamicResource TextBrush}"/>
                <Button x:Name="MaximizeButton" Grid.Column="4" Content="☐" Width="36" Height="24" Margin="0,8" Click="MaximizeRestore_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Maximize/Restore" Foreground="{DynamicResource TextBrush}"/>
                <Button Grid.Column="5" Content="✕" Width="36" Height="24" Margin="8,8,8,8" Click="Close_Click" Style="{StaticResource VoteButtonStyle}" ToolTip="Close" Foreground="{DynamicResource TextBrush}"/>
            </Grid>

            <!-- Main Content with padding border -->
            <Grid Grid.Row="2" Grid.Column="1" Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Left Panel -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="14">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                            <Button Content="Add New Idea" Height="36" Style="{StaticResource PremiumButtonStyle}" Click="AddNewIdea_Click"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="ActiveOnlyCheckBox" Content="Show Active Only" Style="{StaticResource ThemedCheckBoxStyle}" Checked="ActiveOnlyCheckBox_Checked" Unchecked="ActiveOnlyCheckBox_Checked" Grid.Column="0" VerticalAlignment="Center"/>
                                <Button Content="Sort by Voting" Height="32" Margin="8,18,0,0" Style="{StaticResource PremiumButtonStyle}" Click="SortByVotingButton_Click" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            <Border Margin="0,8,0,0" Height="32" Background="{DynamicResource AccentGrayBrush}" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="32"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Search Icon -->
                                    <Viewbox Grid.Column="0" Margin="6,0,0,0" VerticalAlignment="Center" Width="16" Height="16">
                                        <Canvas Width="16" Height="16">
                                            <Ellipse Stroke="{DynamicResource TextBrush}" StrokeThickness="2" Width="10" Height="10" Canvas.Left="1" Canvas.Top="1"/>
                                            <Line X1="10" Y1="10" X2="15" Y2="15" Stroke="{DynamicResource TextBrush}" StrokeThickness="2"/>
                                        </Canvas>
                                    </Viewbox>
                                    <!-- Search TextBox -->
                                    <TextBox x:Name="SearchBox" Grid.Column="1" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource TextBrush}" VerticalContentAlignment="Center" FontSize="14" Style="{StaticResource PremiumTextBoxStyle}" TextChanged="SearchBox_TextChanged"/>
                                    <!-- Clear Button -->
                                    <Button x:Name="ClearSearchButton" Grid.Column="2" Width="24" Height="24" Margin="4,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ClearSearchButton_Click" Visibility="Collapsed" Style="{StaticResource VoteButtonStyle}">
                                        <Viewbox Width="12" Height="12">
                                            <Canvas Width="12" Height="12">
                                                <Line X1="2" Y1="2" X2="10" Y2="10" Stroke="{DynamicResource TextBrush}" StrokeThickness="2"/>
                                                <Line X1="10" Y1="2" X2="2" Y2="10" Stroke="{DynamicResource TextBrush}" StrokeThickness="2"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <ListView x:Name="IdeasListView"
                                  ItemTemplate="{StaticResource ProjectItemTemplate}"
                                  SelectionChanged="IdeasListView_SelectionChanged"
                                  HorizontalContentAlignment="Stretch"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  BorderThickness="0"
                                  Background="{DynamicResource SecondaryBackgroundBrush}"/>
                    </DockPanel>
                </Border>
                <!-- Right Panel -->
                <Border Grid.Column="1" Margin="10,0,0,0" Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="14">
                    <Grid x:Name="RightPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/> <!-- Version history row -->
                        </Grid.RowDefinitions>
                        <!-- Project Details -->
                        <TextBox x:Name="TitleTextBox" 
                                 FontSize="15" 
                                 Margin="0,0,0,10"
                                 Foreground="{DynamicResource TextBrush}"
                                 Background="{DynamicResource AccentGrayBrush}"
                                 BorderBrush="{DynamicResource AccentBlueBrush}"
                                 Style="{StaticResource PremiumTextBoxStyle}"
                                 Text="{Binding ElementName=IdeasListView, Path=SelectedItem.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Status ComboBox -->
                        <Grid Grid.Row="1" Margin="0,0,0,10" Height="32">
                            <ComboBox x:Name="StatusComboBox"
                                      Style="{StaticResource PremiumComboBoxStyle}"
                                      SelectedValue="{Binding ElementName=IdeasListView, Path=SelectedItem.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Content"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="Open"/>
                                <ComboBoxItem Content="In Progress"/>
                                <ComboBoxItem Content="On Hold"/>
                                <ComboBoxItem Content="Done"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                            <Button Background="Transparent" BorderThickness="0" Focusable="False"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Click="StatusComboBoxOverlay_Click"
                                    />
                        </Grid>

                        <TextBox x:Name="DescriptionTextBox" 
                                 Grid.Row="2"
                                 Height="100" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 Margin="0,0,0,10"
                                 Foreground="{DynamicResource TextBrush}"
                                 Background="{DynamicResource AccentGrayBrush}"
                                 BorderBrush="{DynamicResource AccentBlueBrush}"
                                 Style="{StaticResource PremiumTextBoxStyle}"
                                 Text="{Binding ElementName=IdeasListView, Path=SelectedItem.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 GotFocus="DescriptionTextBox_GotFocus"/>

                        <!-- Files Section -->
                        <GroupBox Grid.Row="3" Header="Files" Foreground="{DynamicResource TextBrush}">
                            <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="10">
                                <DockPanel>
                                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Add File Link" Height="30" Margin="0,0,5,0" Click="AddFileLink_Click"
                                                Style="{StaticResource PremiumButtonStyle}"/>
                                    <!-- -->
                                        <Button Grid.Column="1" Content="Add Folder Link" Height="30" Margin="5,0,0,0" Click="AddFolderLink_Click"
                                                Style="{StaticResource PremiumButtonStyle}"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <ListView x:Name="FilesListView" Grid.Column="0" MouseDoubleClick="FilesListView_MouseDoubleClick" Background="{DynamicResource AccentGrayBrush}" BorderThickness="0"
                                                 SelectionChanged="FilesListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel>
                                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource TextBrush}"/>
                                                        <Button Content="🗑" DockPanel.Dock="Right" ToolTip="Remove" Click="RemoveFileOrFolder_Click" Style="{StaticResource VoteButtonStyle}"/>
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <Border Grid.Column="1" Margin="10,0,0,0" Background="{DynamicResource AccentGrayBrush}" CornerRadius="8">
                                            <Image x:Name="FileImagePreview" Stretch="Uniform" Visibility="Collapsed"/>
                                        </Border>
                                    </Grid>
                                </DockPanel>
                            </Border>
                        </GroupBox>
                        <!-- Work Items Section -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Bugs Section -->
                            <GroupBox Header="Bugs" Foreground="{DynamicResource TextBrush}">
                                <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="10">
                                    <DockPanel>
                                        <Button DockPanel.Dock="Top" 
                                                Content="Add Bug" 
                                                Height="30" 
                                                Margin="0,0,0,10"
                                                Style="{StaticResource PremiumButtonStyle}"
                                                Click="AddBug_Click"/>
                                        <ListView x:Name="BugsListView"
                                                  ItemTemplate="{StaticResource WorkItemTemplate}"
                                                  Background="{DynamicResource AccentGrayBrush}" BorderThickness="0"/>
                                    </DockPanel>
                                </Border>
                            </GroupBox>
                            <!-- Features Section -->
                            <GroupBox Grid.Column="1" 
                                     Header="Features" 
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource TextBrush}">
                                <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="10">
                                    <DockPanel>
                                        <Button DockPanel.Dock="Top" 
                                                Content="Add Feature" 
                                                Height="30" 
                                                Margin="0,0,0,10"
                                                Style="{StaticResource PremiumButtonStyle}"
                                                Click="AddFeature_Click"/>
                                        <ListView x:Name="FeaturesListView"
                                                  ItemTemplate="{StaticResource WorkItemTemplate}"
                                                  Background="{DynamicResource AccentGrayBrush}" BorderThickness="0"/>
                                    </DockPanel>
                                </Border>
                            </GroupBox>
                            <!-- Vote History Section -->
                            <GroupBox Grid.Column="2"
                                     Header="Vote History"
                                     Margin="5,0,0,0"
                                     Foreground="{DynamicResource TextBrush}">
                                <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="10">
                                    <ListView x:Name="VoteHistoryListView"
                                              Background="{DynamicResource AccentGrayBrush}"
                                              BorderThickness="0"
                                              ItemTemplate="{StaticResource VoteHistoryItemTemplate}"
                                              HorizontalContentAlignment="Stretch">
                                    </ListView>
                                </Border>
                            </GroupBox>
                        </Grid>
                        <!-- Version History Section -->
                        <GroupBox Grid.Row="5" Header="Version History" Foreground="{DynamicResource TextBrush}">
                            <Border Background="{DynamicResource AccentGrayBrush}" CornerRadius="10" Padding="8">
                                <DockPanel LastChildFill="True">
                                    <!-- Responsive Input row -->
                                    <Grid DockPanel.Dock="Top" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140" MinWidth="100"/>
                                            <ColumnDefinition Width="2*" MinWidth="180"/>
                                            <ColumnDefinition Width="3*" MinWidth="260"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="160" MinWidth="120"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Version Number -->
                                        <Grid Grid.Column="0">
                                            <TextBox x:Name="NewVersionNumber" Background="{DynamicResource AccentGrayBrush}" Foreground="{DynamicResource TextBrush}" BorderThickness="0" VerticalContentAlignment="Center" Padding="4">
                                                <TextBox.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.12"/>
                                                </TextBox.Effect>
                                            </TextBox>
                                            <TextBlock Text="Version" Foreground="{DynamicResource MutedTextBrush}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="6,0,0,0"
                                                       Visibility="{Binding Text, ElementName=NewVersionNumber, Converter={StaticResource EmptyToVis}}"/>
                                        </Grid>
                                        <!-- Name (variable width) -->
                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                            <TextBox x:Name="NewVersionName" Background="{DynamicResource AccentGrayBrush}" Foreground="{DynamicResource TextBrush}" BorderThickness="0" VerticalContentAlignment="Center" Padding="4">
                                                <TextBox.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.12"/>
                                                </TextBox.Effect>
                                            </TextBox>
                                            <TextBlock Text="Name" Foreground="{DynamicResource MutedTextBrush}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="6,0,0,0"
                                                       Visibility="{Binding Text, ElementName=NewVersionName, Converter={StaticResource EmptyToVis}}"/>
                                        </Grid>
                                        <!-- Folder (variable width) -->
                                        <Grid Grid.Column="2" Margin="8,0,0,0">
                                            <TextBox x:Name="NewVersionFolder" Background="{DynamicResource AccentGrayBrush}" Foreground="{DynamicResource TextBrush}" BorderThickness="0" VerticalContentAlignment="Center" Padding="4">
                                                <TextBox.Effect>
                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#222" Opacity="0.12"/>
                                                </TextBox.Effect>
                                            </TextBox>
                                            <TextBlock Text="Folder path or link" Foreground="{DynamicResource MutedTextBrush}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="6,0,0,0"
                                                       Visibility="{Binding Text, ElementName=NewVersionFolder, Converter={StaticResource EmptyToVis}}"/>
                                        </Grid>
                                        <Button Grid.Column="3" Content="Browse" Click="BrowseVersionFolder_Click" Style="{StaticResource PremiumButtonStyle}" Margin="8,0,0,0"/>
                                        <!-- Release date shown as pickable but not required -->
                                        <DatePicker Grid.Column="4" x:Name="NewVersionDate" HorizontalAlignment="Left" />
                                        <Button Grid.Column="5" Content="Add Version" Click="AddVersion_Click" Style="{StaticResource PremiumButtonStyle}" Margin="8,0,0,0"/>
                                    </Grid>
                                    <ListView x:Name="VersionHistoryListView" ItemTemplate="{StaticResource VersionItemTemplate}" Background="{DynamicResource AccentGrayBrush}" BorderThickness="0" Height="160" MinHeight="120" MaxHeight="260" VerticalAlignment="Top" MouseDoubleClick="VersionHistoryListView_MouseDoubleClick"/>
                                </DockPanel>
                            </Border>
                        </GroupBox>
                    </Grid>
                </Border>
            </Grid>
            <!-- Top resize -->
            <Thumb Grid.Row="1" Grid.Column="1" Cursor="SizeNS" DragDelta="ResizeTopThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Top-left corner -->
            <Thumb Grid.Row="1" Grid.Column="0" Cursor="SizeNWSE" DragDelta="ResizeTopLeftThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Top-right corner -->
            <Thumb Grid.Row="1" Grid.Column="2" Cursor="SizeNESW" DragDelta="ResizeTopRightThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Left resize -->
            <Thumb Grid.Row="2" Grid.Column="0" Cursor="SizeWE" DragDelta="ResizeLeftThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Right resize -->
            <Thumb Grid.Row="2" Grid.Column="2" Cursor="SizeWE" DragDelta="ResizeRightThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Bottom resize -->
            <Thumb Grid.Row="3" Grid.Column="1" Cursor="SizeNS" DragDelta="ResizeBottomThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Bottom-left corner -->
            <Thumb Grid.Row="3" Grid.Column="0" Cursor="SizeNESW" DragDelta="ResizeBottomLeftThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
            <!-- Bottom-right corner -->
            <Thumb Grid.Row="3" Grid.Column="2" Cursor="SizeNWSE" DragDelta="ResizeBottomRightThumb_DragDelta" Opacity="0" IsHitTestVisible="True"/>
        </Grid>
    </Border>
</Window>